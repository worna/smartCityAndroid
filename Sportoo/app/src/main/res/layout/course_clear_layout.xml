<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/course_clear_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/course_clear_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:filterTouchesWhenObscured="false"
            android:scaleType="centerCrop"
            android:src="@drawable/yoga"
            android:tintMode="screen"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#A48A8A8A" />

        <TextView
            android:id="@+id/course_clear_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:text="@string/course_name"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_headline_2"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/course_clear_date"
            app:layout_constraintTop_toTopOf="@id/course_clear_image" />

        <TextView
            android:id="@+id/course_clear_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_blue"
            android:text="@string/course_date"
            android:textAlignment="center"
            app:layout_constraintBottom_toTopOf="@id/course_clear_address" />

        <TextView
            android:id="@+id/course_clear_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent_blue"
            android:text="@string/course_address"
            android:textAlignment="center"
            app:layout_constraintBottom_toBottomOf="@id/course_clear_image" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>